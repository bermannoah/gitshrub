<!DOCTYPE html>
<html>
  <head>
    <title>GitShrub</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'spectre', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
    <%= render "logout"  %>
    <% else %>
    <%= render "login" %>
    <% end %>
    <%= yield %>
  </body>
</html>
